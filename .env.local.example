# OnchainKit API Key (get from https://portal.cdp.coinbase.com/)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_api_key_here

# Upstash Redis (required for data storage)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Farcaster (required for posting)
FARCASTER_HUB_URL=https://hub.pinata.cloud
NEYNAR_API_KEY=your_neynar_api_key
FARCASTER_SIGNER_UUID=your_farcaster_signer_uuid

# Optional: Reddit API credentials
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Optional: Twitter API credentials
TWITTER_BEARER_TOKEN=

# Optional: Giphy API key
GIPHY_API_KEY=

# Optional: OpenAI API key for caption generation
OPENAI_API_KEY=

# Optional: USDC recipient address for payments
USDC_RECIPIENT_ADDRESS=your_usdc_recipient_address

# App configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
